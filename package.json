{
  "name": "nodewebkitapp",
  "version": "0.0.1",
  "description": "A simple scaffolding to build a node-webkit app from scratch",
  "main": "edit/index.html",
  "window": {
    "title": "My New nodewebkit project",
    "toolbar": false,
    "frame": false,
    "resizable": true,
    "position": "center",
    "width": 800,
    "height": 600
  },
  "repository": {
    "url": "https://github.com/your-name/slush-nodewebkit"
  },
  "scripts": {
    "run": "nwbuild --run ./",
    "win": "nwbuild -p win ./",
    "linux": "nwbuild -p linux32,linux64 ./",
    "osx": "nwbuild -p osx ./"
  },
  "author": {
    "name": "Your Name",
    "url": "youremail@website.com"
  },
  "dependencies": {
    "node-webkit-builder": "*"
  },
  "devDependencies": {
    "gulp": "^3.6.2",
    "gulp-shell": "^0.2.5"
  }
}
